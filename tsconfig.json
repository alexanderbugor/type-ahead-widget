{
    "compilerOptions": {
      "typeRoots": ["./node_modules/@types", "./node_modules/jest-enzyme"],
      "jsx": "react",
      "module": "commonjs",
      "esModuleInterop": true,
      "noImplicitAny": true,
      "outDir": "./build/",
      "preserveConstEnums": true,
      "removeComments": true,
      "sourceMap": true,
      "target": "es2015",
      "plugins": [
        {
          "transform": "typescript-transform-paths",
          "afterDeclarations": true
        }
      ],
      "types": ["react", "jest"]
    },
    "include": [
      "src/index.tsx",
      "./global.d.ts"
    ]
  }